<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#414141">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memory Size"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/memory_size_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter memory size"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Processes"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/num_processes_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter number of processes"
                android:inputType="number" />

            <LinearLayout
                android:id="@+id/process_sizes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Operations"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/num_operations_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter number of operations"
                android:inputType="number" />

            <LinearLayout
                android:id="@+id/operation_sizes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allocation Algorithm"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <RadioGroup
                android:id="@+id/algorithm_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/first_fit_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Fit" />

                <RadioButton
                    android:id="@+id/best_fit_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Fit" />

                <RadioButton
                    android:id="@+id/worst_fit_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worst Fit" />

                <RadioButton
                    android:id="@+id/next_fit_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Fit" />

            </RadioGroup>

            <Button
                android:id="@+id/allocate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Allocate" />

            <TextView
                android:id="@+id/allocation_status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/visualization_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#f0f0f0"
                android:orientation="vertical"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
